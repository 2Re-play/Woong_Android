<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".join.marketer.market.Enroll1Activity"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">
        <ImageView
            android:id="@+id/join1_logo"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:background="@color/colorPrimaryDark"
            android:layout_centerInParent="true"/>
        <TextView
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="판매자로 등록중입니다."
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/join1_logo"/>
    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2.3"
        android:orientation="vertical"
        android:layout_marginTop="20dp">
        <TextView
            android:id="@+id/farm_location_confirm"
            android:layout_gravity="center"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="우리 농장 지역 확인"
            android:textAlignment="center"
            android:background="@android:color/darker_gray"/>

        <RelativeLayout
            android:id="@+id/map_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            android:layout_margin="50dp"
            android:background="@drawable/round_map_layout"
            android:layout_marginTop="20dp"></RelativeLayout>

            <RelativeLayout
                android:id="@+id/market_map_view"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

            </RelativeLayout>
            <ImageView
                android:id="@+id/btn_currentloc_marketer"
                android:layout_alignParentRight="true"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:background="@color/colorPastel"/>
</LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.7">
        <Button
            android:id="@+id/btn_next_enroll1"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_centerInParent="true"
            android:text="다음"
            android:textColor="@android:color/white"
            android:background="@color/colorPrimaryDark"/>
    </RelativeLayout>

</LinearLayout>