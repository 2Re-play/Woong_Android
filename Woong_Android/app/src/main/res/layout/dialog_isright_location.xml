<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    android:background="@drawable/dialog_isright_location_img"
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="200dp"
    android:layout_height="150dp">
    <TextView
        android:layout_centerInParent="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="해당 주소로 등록하시겠습니까?"/>
    <TextView
        android:id="@+id/btn_ok_location"
        android:gravity="center"
        android:layout_alignParentBottom="true"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="확인"/>
    <TextView
        android:id="@+id/btn_cancel_location"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="취소"/>


</RelativeLayout>