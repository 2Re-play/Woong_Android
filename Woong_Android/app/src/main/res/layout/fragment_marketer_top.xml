<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">
    <android.support.design.widget.AppBarLayout
        android:id="@+id/appbar_marketer"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:fitsSystemWindows="true"
        app:elevation="0dp"
        android:theme="@style/AppTheme.AppBarOverlay">

        <android.support.design.widget.CollapsingToolbarLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            app:contentScrim="?attr/colorPrimaryDark"
            app:expandedTitleMarginEnd="64dp"
            app:expandedTitleMarginStart="48dp"
            app:layout_scrollFlags="scroll|exitUntilCollapsed">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <RelativeLayout
                    android:id="@+id/relative_top_marketer"
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:background="#e6e6e6">
                    <TextView
                        android:id="@+id/tv_edit_marketer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/nanum_extrabold"
                        android:textSize="16sp"
                        android:layout_margin="15dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:text="수정하기"/>
                    <TextView
                        android:id="@+id/tv_editcompl_marketer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:fontFamily="@font/nanum_extrabold"
                        android:textSize="16sp"
                        android:layout_margin="15dp"
                        android:textColor="@color/colorPrimaryDark"
                        android:visibility="gone"
                        android:text="수정완료"/>
                    <TextView
                        android:id="@+id/tv_name_marketer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:text="현듀 마켓"/>

                    <EditText
                        android:id="@+id/et_name_marketer"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:background="#00000000"
                        android:textColor="@color/colorPrimaryDark"
                        android:layout_centerHorizontal="true"
                        android:layout_marginTop="20dp"
                        android:fontFamily="@font/nanum_bold"
                        android:textSize="22sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        android:text="현듀 마켓"/>
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/tv_name_marketer"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">
                        <TextView
                            android:id="@+id/tv_tag2_marketer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:textColor="#ffffff"
                            android:background="@color/colorPastel"
                            android:text="#무료배송"/>
                        <TextView
                            android:id="@+id/tv_tag1_marketer"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingTop="3dp"
                            android:paddingBottom="3dp"
                            android:paddingLeft="20dp"
                            android:paddingRight="20dp"
                            android:layout_marginLeft="10dp"
                            android:textColor="#ffffff"
                            android:background="@color/colorPastel"
                            android:text="#당일배송"/>
                    </LinearLayout>
                    <ImageButton
                        android:id="@+id/ib_bookmark_marketer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPastel"
                        android:layout_alignParentBottom="true"
                        android:layout_margin="10dp"/>
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignBottom="@+id/ib_bookmark_marketer"
                        android:layout_toRightOf="@id/ib_bookmark_marketer"
                        android:layout_marginBottom="10dp"
                        android:text="70개"
                        android:textColor="@color/colorPrimaryDark" />
                    <ImageButton
                        android:id="@+id/ib_message_marketer"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:background="@color/colorPastel"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:layout_margin="10dp"/>
                </RelativeLayout>
                <View
                    android:id="@+id/view_no_marketer"
                    android:layout_below="@id/relative_top_marketer"
                    android:layout_width="match_parent"
                    android:layout_height="60dp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:gravity="center"
                    android:orientation="vertical">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="110dp" />
                    <RelativeLayout
                        android:layout_width="85dp"
                        android:layout_height="wrap_content">
                        <ImageView
                            android:id="@+id/iv_profile_marketer"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:src="@drawable/ic_launcher_foreground"
                            android:background="#ffaa22" />
                        <ImageButton
                            android:id="@+id/ib_editprof_marketer"
                            android:layout_width="20dp"
                            android:layout_height="20dp"
                            android:layout_marginRight="-5dp"
                            android:layout_alignRight="@+id/iv_profile_marketer"
                            android:layout_alignBottom="@+id/iv_profile_marketer"
                            android:visibility="gone"
                            android:background="@color/colorPastel"/>
                    </RelativeLayout>
                </LinearLayout>
            </RelativeLayout>
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar_marketer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                app:layout_collapseMode="pin"
                app:popupTheme="@style/AppTheme.PopupOverlay" />
        </android.support.design.widget.CollapsingToolbarLayout>

    </android.support.design.widget.AppBarLayout>


    <FrameLayout
        android:id="@+id/frame_marketer"
        app:layout_behavior="@string/appbar_scrolling_view_behavior"
        android:layout_height="match_parent"
        android:layout_width="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.design.widget.TabLayout
                android:id="@+id/tab_top_marketer"
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:background="@color/colorPrimaryDark"
                app:tabIndicatorColor="#ffffff"
                android:clipToPadding="false"
                android:elevation="4dp"></android.support.design.widget.TabLayout>
            <android.support.v4.view.ViewPager
                android:id="@+id/viewpager_marketer"
                android:layout_below="@+id/tab_top_marketer"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
            </android.support.v4.view.ViewPager>

        </LinearLayout>
    </FrameLayout>


</android.support.design.widget.CoordinatorLayout>
