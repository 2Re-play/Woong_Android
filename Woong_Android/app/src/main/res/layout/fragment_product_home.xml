<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout

        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark">
        <TextView
            android:id="@+id/tv_submenu_product"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#000000"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:text="감자"/>
        <ImageButton
            android:id="@+id/btn_search_product"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_toLeftOf="@+id/btn_cart_product"
            android:layout_centerVertical="true"/>
        <ImageButton
            android:id="@+id/btn_cart_product"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:background="@color/colorAccent"
            android:layout_marginRight="10dp"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"/>
        <ImageView
            android:id="@+id/iv_searchback_product"
            android:layout_width="285dp"
            android:layout_height="30dp"
            android:layout_marginLeft="25dp"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:visibility="gone"
            android:background="@color/colorPastel"/>
        <EditText
            android:id="@+id/et_search_main"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textColor="#000000"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="감자"/>
        <ImageView
            android:id="@+id/iv_searchico_main"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignStart="@id/iv_searchback_product"
            android:layout_centerVertical="true"
            android:layout_marginLeft="20dp"
            android:visibility="gone"
            android:background="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignEnd="@id/iv_searchback_product"
            android:layout_alignBottom="@id/iv_searchback_product"
            android:layout_marginRight="15dp"
            android:layout_marginBottom="5dp"
            android:textSize="12sp"
            android:visibility="gone"
            android:text="(100건)"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="15dp">
        <Button
            android:id="@+id/btn_short_product"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@color/colorPrimaryDark"
            android:textColor="#ffffff"
            android:text="짧은거리" />
        <Button
            android:id="@+id/btn_best_product"
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:layout_toRightOf="@id/btn_short_product"
            android:background="#ffffff"
            android:text="최고인기" />
        <Button
            android:layout_width="80dp"
            android:layout_height="35dp"
            android:background="@color/colorPastel"
            android:layout_toRightOf="@id/btn_best_product"
            android:text="낮은가격" />
    </RelativeLayout>
    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_product_product"
        app:layoutManager="android.support.v7.widget.GridLayoutManager"
        app:spanCount="2"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </android.support.v7.widget.RecyclerView>
</LinearLayout>