<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="10dp">
    <LinearLayout
        android:background="@drawable/rv_item_image"
        android:layout_width="match_parent"
        android:layout_height="244dp"
        android:elevation="3dp"
        android:layout_centerInParent="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="120dp">

            <ImageView
                android:id="@+id/iv_productimg_home"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:scaleType="centerCrop"
                android:layout_alignParentStart="true"
                android:layout_alignParentTop="true"
                android:background="#acacac" />
            <ImageView
                android:id="@+id/btn_favorite_home"
                android:layout_alignParentBottom="true"
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:src="@drawable/my_pick_heart"/>
        </RelativeLayout>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_marginTop="15dp"
            android:layout_height="wrap_content">
            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/nanum_regular"
                android:textColor="#ADADAD"
                android:id="@+id/sign"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="["/>
            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/nanum_regular"
                android:textColor="#ADADAD"
                android:layout_toRightOf="@+id/sign"
                android:id="@+id/marketname_bookmark_home"
                android:gravity="center"
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="현듀마켓"/>


            <TextView
                android:textSize="14sp"
                android:fontFamily="@font/nanum_regular"
                android:textColor="#ADADAD"
                android:layout_toRightOf="@+id/marketname_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="]"/>
        </RelativeLayout>


        <TextView
            android:id="@+id/productname_bookmark_home"
            android:gravity="center"
            android:fontFamily="@font/nanumsquare_bold"
            android:textSize="16sp"
            android:textColor="#707070"
            android:layout_gravity="center"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:text="돼지 감자"/>
        <RelativeLayout
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="12sp"
                android:textColor="#ADADAD"
                android:id="@+id/unitnum_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"/>
            <TextView
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="12sp"
                android:textColor="#ADADAD"
                android:layout_toRightOf="@+id/unitnum_bookmark_home"
                android:id="@+id/unitname_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="kg"/>
            <TextView
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="12sp"
                android:textColor="#ADADAD"
                android:layout_toRightOf="@+id/unitname_bookmark_home"
                android:id="@+id/dang_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="당"/>
            <TextView
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="12sp"
                android:textColor="#ADADAD"
                android:id="@+id/cost_bookmark_home"
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/dang_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6600"/>
            <TextView
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="12sp"
                android:textColor="#ADADAD"
                android:layout_toRightOf="@+id/cost_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="원"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="5dp">
            <TextView
                android:id="@+id/firsttag_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#당일배송"
                android:fontFamily="@font/nanum_bold"
                android:textSize="12sp"
                android:textColor="#529C77"/>
            <TextView
                android:layout_marginLeft="10dp"
                android:layout_toRightOf="@+id/firsttag_bookmark_home"
                android:id="@+id/secondtag_bookmark_home"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="#무료배송"
                android:fontFamily="@font/nanum_bold"
                android:textSize="12sp"
                android:textColor="#529C77"/>
        </RelativeLayout>
    </LinearLayout>
</RelativeLayout>