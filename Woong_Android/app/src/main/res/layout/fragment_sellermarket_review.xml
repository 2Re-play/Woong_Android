<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">
        <ImageView
            android:layout_marginTop="10dp"
            android:layout_gravity="center_horizontal"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@color/colorPrimaryDark"/>
        <TextView
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="만족해요!"
            android:textColor="@color/colorPrimaryDark"/>
        <RatingBar
            android:id="@+id/avr_rating_marketreview"
            android:layout_gravity="center_horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:isIndicator="true"
            android:numStars="5"
            android:rating="4"
            style="?android:attr/ratingBarStyleIndicator"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="3"
                android:orientation="vertical">

            </LinearLayout>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/darker_gray"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginLeft="10dp">
                <TextView
                    android:paddingVertical="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="배달 속도"/>
                <TextView
                    android:paddingVertical="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="맛"/>
                <TextView
                    android:paddingVertical="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="유통 기한"/>
                <TextView
                    android:paddingVertical="9dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="친절도"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical">
                <RatingBar
                    android:id="@+id/first_rating_marketreview"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
                <RatingBar
                    android:id="@+id/second_rating_marketreview"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
                <RatingBar
                    android:id="@+id/third_rating_marketreview"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
                <RatingBar
                    android:id="@+id/fourth_rating_marketreview"

                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:isIndicator="true"
                    android:numStars="5"
                    android:rating="4"
                    style="?android:attr/ratingBarStyleIndicator"
                    />
            </LinearLayout>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/darker_gray"
            />
        <TextView
            android:layout_marginLeft="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="포토"/>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/img1_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/img2_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/img3_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/img4_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center_horizontal">
            <ImageView
                android:id="@+id/img5_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/img6_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/img7_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
            <ImageView
                android:id="@+id/img8_review"
                android:layout_width="80dp"
                android:layout_height="50dp"
                android:background="@android:color/darker_gray"
                android:scaleType="centerCrop"
                android:layout_margin="1dp"/>
        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginVertical="10dp"
            android:background="@android:color/darker_gray"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:text="후기보기"
            android:layout_marginBottom="15dp"/>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_sellermarket_review"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:nestedScrollingEnabled="false"></android.support.v7.widget.RecyclerView>

        <Button
            android:fontFamily="@font/nanumsquare_bold"
            android:textSize="14sp"
            android:id="@+id/btn_show_more_review"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="34dp"
            android:layout_width="295dp"
            android:layout_height="30dp"
            android:background="@drawable/green_round_button"
            android:text="더보기"
            android:textColor="#FFFFFF"
            android:layout_gravity="center_horizontal"
            />
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>