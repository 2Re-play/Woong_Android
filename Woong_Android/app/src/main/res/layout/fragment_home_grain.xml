        <Button
            android:layout_width="70dp"
            android:layout_height="30dp"
            android:text="이름순"
            android:background="@color/colorPrimary"/>
        <Button
            android:layout_width="80dp"
            android:layout_height="30dp"
            android:text="제철식품"
            android:background="@color/colorPrimaryDark"/>
        <Button
            android:layout_width="90dp"
