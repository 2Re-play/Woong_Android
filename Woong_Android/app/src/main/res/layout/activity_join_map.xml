<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".map.MapActivity">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_search_join_map"
        android:layout_marginTop="44dp"
        android:layout_centerHorizontal="true"
        android:layout_width="325dp"
        android:layout_height="50dp"
        android:background="@drawable/setting_location_1_search_bar">
        <ImageView
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:src="@drawable/setting_location_1_search"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="30dp"/>
        <TextView
            android:id="@+id/name_location_join_map"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:fontFamily="@font/nanum_bold"
            android:textSize="16dp"
            android:text="현재 위치 검색"
            android:textColor="#1C2320"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="14dp"
            />
    </RelativeLayout>
    <ImageView
        android:id="@+id/btn_presentloc_join_map"
        android:layout_marginTop="50dp"
        android:layout_marginRight="15dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_search_join_map"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:src="@drawable/setting_location_1_location"/>
    
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_decided_join_map"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/colorPrimaryDark"
        android:fontFamily="@font/nanum_extrabold"
        android:textSize="16dp"
        android:text="이 주소로 지정하기"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>