<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".map.MapActivity">

    <RelativeLayout
        android:id="@+id/map_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/btn_search_join_map"
        android:layout_marginTop="10dp"
        android:layout_centerHorizontal="true"
        android:layout_width="300dp"
        android:layout_height="30dp"
        android:background="#FFFFFF">
        <TextView
            android:id="@+id/name_location_join_map"
            android:layout_height="wrap_content"
            android:layout_width="wrap_content"
            android:text="현재 위치 검색"
            android:textColor="#000000"
            android:layout_centerInParent="true"/>
    </RelativeLayout>
    <ImageView
        android:id="@+id/btn_presentloc_join_map"
        android:layout_marginTop="20dp"
        android:layout_alignParentRight="true"
        android:layout_below="@+id/btn_search_join_map"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@color/colorPastel"/>
    
    <Button
        android:layout_alignParentBottom="true"
        android:id="@+id/btn_decided_join_map"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:text="이 주소로 지정하기"
        android:textColor="#FFFFFF"
        />

</RelativeLayout>