<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFFFFF">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:paddingBottom="10dp">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="49dp"
                android:orientation="horizontal">
                <RelativeLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:background="@null"/>
                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="1">
                <ImageView
                    android:layout_marginLeft="110dp"
                    android:layout_marginTop="29dp"
                    android:layout_width="29dp"
                    android:layout_height="29dp"
                    android:src="@drawable/seller_market_intro_leaf"/>
                </LinearLayout>
            </LinearLayout>
        <TextView
            android:id="@+id/tv_labelhi_intro"
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:fontFamily="@font/nanum_extrabold"
            android:layout_marginLeft="15dp"
            android:paddingTop="15dp"
            android:text="인사말"
            android:textColor="#529C77"
            android:textSize="15sp" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">


            <ImageView
                android:id="@+id/iv_representimg_sellermarket_intro"
                android:layout_width="250dp"
                android:layout_height="146dp"
                android:layout_centerHorizontal="true"
                android:scaleType="centerCrop" />

        </RelativeLayout>



        <LinearLayout
            android:id="@+id/linear_tags_intro"
            android:layout_marginVertical="20dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_tag1_intro"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:text="#"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="13dp"
                android:textColor="#529C77" />

            <TextView
                android:id="@+id/tv_tag2_intro"
                android:layout_width="60dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:text="#"
                android:fontFamily="@font/nanumsquare_bold"
                android:textSize="13dp"
                android:textColor="#529C77" />

        </LinearLayout>

        <TextView
            android:id="@+id/tv_hi_intro"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_labelhi_intro"
            android:fontFamily="@font/nanum_regular"
            android:layout_marginHorizontal="25dp"
            android:text=""
            android:textColor="#adadad"
            android:textSize="15sp"/>
    </LinearLayout>
</android.support.v4.widget.NestedScrollView>